---
import ImageMod from "@/components/ImageMod.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const sectionData = (await getEntry(
  "benefitsSectionCollection",
  "benefits-carousel"
)) as CollectionEntry<"benefitsSectionCollection">;

const { enable, title, list } = sectionData.data;
---

{
  enable && (
    <section class="section">
      <div class="container">
        <div class="section-container">
          <div class="section-intro centralize">
            <h2
              class="title hasEmphasize"
              data-aos="fade-up-sm"
              data-aos-delay="0"
              set:html={markdownify(title)}
            />
          </div>
          <div
            class="section-content overflow-hidden "
            data-aos="fade-up-sm"
            data-aos-delay="100"
          >
            <div class="benefits-slider">
              <div class="swiper-wrapper">
                {list.length &&
                  list
                    .filter((f) => f.enable)
                    .map((swiperItem, index) => {
                      return (
                        <div class="swiper-slide">
                          <div class="bg-secondary/20 p-10 rounded-[1.9rem] mb-5">
                            <ImageMod
                              width={1200}
                              height={600}
                              src={swiperItem.image}
                              alt={swiperItem.title}
                              class="mx-auto rounded-3xl"
                            />
                          </div>
                          <div>
                            <div class="flex items-center gap-6 mb-4">
                              <div class="bg-light rounded-full w-10 aspect-square grid place-items-center ">
                                <span>{++index}</span>
                              </div>
                              <h3
                                class="font-medium text-h5"
                                set:html={swiperItem.title}
                              />
                            </div>
                            <p class="text-sm text-text-dark">
                              {swiperItem.subtitle}
                            </p>
                          </div>
                        </div>
                      );
                    })}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
<style>
  .benefits-slider .swiper-slide-active {
    /* transform: scale(1.2) !important; */
  }
</style>
<script>
  import { Swiper } from "swiper";
  import "swiper/css";
  import { Autoplay, EffectCoverflow, Pagination } from "swiper/modules";

  // astro:page-load event is fired when the page is loaded
  document.addEventListener("astro:page-load", () => {
    new Swiper(".benefits-slider", {
      modules: [Pagination, Autoplay, EffectCoverflow],
      effect: "coverflow",
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: "auto",
      initialSlide: 2,
      loop: true,
      autoplay: {
        delay: 6000,
      },
      coverflowEffect: {
        rotate: 10,
        stretch: 50,
        depth: 10,
        modifier: 1.2,
        slideShadows: false,
        scale: 0.6,
      },
      breakpoints: {
        768: {
          slidesPerView: 1,
        },
        1024: {
          slidesPerView: 2,
        },
      },
    });
  });
</script>
