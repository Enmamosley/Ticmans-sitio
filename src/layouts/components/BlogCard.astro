---
import dateFormat from "@/lib/utils/dateFormat";
import ImageMod from "./ImageMod.astro";
interface DataInterface {
  title: string;
  meta_title: string;
  description: string;
  image: string;
  date: string;
  categories: string[];
}

const props = Astro.props;

const { slug } = props.content;
const { title, image, date, categories } = props.content.data as DataInterface;
---

<div data-aos="fade-up-sm" data-aos-delay={props.aosDelay}>
  <div
    class="border border-border rounded-3xl overflow-hidden flex flex-col h-full"
  >
    <ImageMod
      src={image}
      alt={title}
      width={450}
      height={350}
      class="w-full !h-[300px] object-cover"
    />
    <div class="p-6 pb-8 flex flex-col justify-between gap-3 h-full">
      <div>
        <div class="flex gap-3 items-center mb-4">
          {
            categories.map((category: any) => (
              <span class="badge inline-block">{category}</span>
            ))
          }
          <span class="text-sm font-medium text-text-dark/70 inline-block"
            >{dateFormat(date, "dd MMM, yyyy")}</span
          >
        </div>
        <a href={"/blog/" + slug}
          ><h3 class="text-h5 mb-3 hover:text-primary">{title}</h3></a
        >
      </div>

      <a
        href={`/blog/${slug}`}
        class="btn btn-outline-secondary px-7 py-3 inline-block self-start"
      >
        Read More
      </a>
    </div>
  </div>
</div>
