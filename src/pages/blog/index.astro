---
import Pagination from "@/components/Pagination.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import dateFormat from "@/lib/utils/dateFormat";
import { sortByDate } from "@/lib/utils/sortFunctions";
import { markdownify } from "@/lib/utils/textConverter";
import BlogSection from "@/partials/BlogSection.astro";
import CallToAction from "@/partials/CallToAction.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { getEntry } from "astro:content";

const COLLECTION_FOLDER = "blog";
const postIndex = await getEntry(COLLECTION_FOLDER, "-index");
const posts = await getSinglePage(COLLECTION_FOLDER);
const sortedPosts = sortByDate(posts);
const visiblePosts = sortedPosts.slice(0, config.settings.pagination);
const totalPages: number = Math.ceil(posts.length / config.settings.pagination);

const { title, description } = postIndex!.data;
// featured posts
const featuredPost = visiblePosts.filter((post) => post.data.featured)[0];
const nonFeaturedPosts = featuredPost
  ? sortedPosts.filter((post) => post.data.title !== featuredPost.data.title)
  : sortedPosts;
---

<Base {...postIndex!.data}>
  <PageHeader title={title} subtitle={description} />
  {
    featuredPost && (
      <section
        class="section pt-24 xl:pt-40"
        data-aos="fade-up-sm"
        data-aos-delay="100"
      >
        <div class="container">
          <div class="grid lg:grid-cols-12 items-center gap-10">
            <div class="lg:col-span-6">
              <img
                src={featuredPost.data.image}
                alt="Blog Image"
                class="w-full rounded-xl"
              />
            </div>
            <div class="lg:col-span-5">
              <div class="flex items-center gap-5 pb-4 font-secondary">
                {featuredPost.data.categories.map((category: any) => (
                  <p class="badge">{category}</p>
                ))}
                <span class=" text-text-dark inline-block ">
                  {dateFormat(featuredPost.data.date, "dd MMM, yyyy")}
                </span>
              </div>
              <a href={`blog/${featuredPost.slug}`} class="">
                <h3
                  class="text-h5 font-medium pb-5 hover:text-primary transition duration-300"
                  set:html={markdownify(featuredPost.data.title)}
                />
              </a>
              <p class="pb-8 text-text-dark/70">
                {featuredPost.data.description}
              </p>
              <a
                href={`blog/${featuredPost.slug}`}
                class="btn btn-outline-secondary text-base cursor-pointer"
              >
                Read More
              </a>
            </div>
          </div>
        </div>
      </section>
    )
  }
  <section class={`section ${!featuredPost && "pt-24 xl:pt-4"}`}>
    <div class="container">
      <div class="section-container">
        <div class="section-intro">
          <h2 class="title" data-aos="fade-up-sm" data-aos-delay="0">
            Entradas Recientes
          </h2>
        </div>
        <div class="section-content space-y-14">
          <BlogSection posts={nonFeaturedPosts} />
          <Pagination section={COLLECTION_FOLDER} totalPages={totalPages} />
        </div>
      </div>
    </div>
  </section>
  <CallToAction hasBackground={true} />
</Base>
